<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rr_setPin">

    <ImageView
        android:id="@+id/img_back"
        android:layout_marginTop="5dp"
        android:padding="12dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow"
        app:tint="@color/black"></ImageView>


    <ImageView
        android:visibility="gone"
        android:tint="@color/green"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/passcode"
        ></ImageView>


<!--    <ImageView-->
<!--        android:tint="@color/textcolor"-->
<!--        android:alpha=".8"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:id="@+id/resetPin"-->
<!--        android:padding="0dp"-->
<!--        android:layout_height="20dp"-->
<!--        android:layout_width="40dp"-->
<!--        android:rotation="90"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:src="@drawable/threedots"-->
<!--        ></ImageView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <fontspackageForTextView.Regular
            android:layout_marginBottom="20dp"
            android:id="@+id/createpin"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/set_passcode"
            android:textColor="@color/black"
            ></fontspackageForTextView.Regular>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:id="@+id/txt_securely"
            android:layout_below="@+id/createpin"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            ></TextView>


        <LinearLayout

            android:layout_gravity="center"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/txt_securely"
            android:layout_width="300dp"
            android:orientation="horizontal"
            >

            <TextView
                android:background="@drawable/edittext_border_drawable"
                android:inputType="numberPassword"
                android:id="@+id/txt_pinone"
                android:layout_marginEnd="5dp"
                android:layout_height="match_parent"
                android:layout_width="70dp"
                android:text=""
                android:textSize="30dp"
                android:gravity="center"
                ></TextView>

            <TextView
                android:textSize="30dp"
                android:background="@drawable/edittext_border_drawable"
                android:inputType="numberPassword"
                android:id="@+id/txt_pintwo"
                android:layout_marginEnd="5dp"
                android:layout_height="match_parent"
                android:layout_width="70dp"
                android:text=""
                android:gravity="center"
                ></TextView>

            <TextView
                android:textSize="30dp"
                android:background="@drawable/edittext_border_drawable"
                android:inputType="numberPassword"
                android:id="@+id/txt_pinthree"
                android:layout_marginEnd="5dp"
                android:layout_height="match_parent"
                android:layout_width="70dp"
                android:text=""
                android:gravity="center"
                ></TextView>

            <TextView
                android:textSize="30dp"
                android:background="@drawable/edittext_border_drawable"
                android:inputType="numberPassword"
                android:id="@+id/txt_pinfour"
                android:layout_marginEnd="5dp"
                android:layout_height="match_parent"
                android:layout_width="70dp"
                android:text=""
                android:gravity="center"
                ></TextView>

        </LinearLayout>



        <TextView
            android:visibility="gone"
            android:layout_marginTop="0dp"
            android:padding="10dp"
            android:id="@+id/forgotpasscode"
            android:gravity="center"
            android:textColor="@color/darkRed"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/forgot_passcode"
            ></TextView>

        <GridView
            android:verticalSpacing="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:horizontalSpacing="10dp"
            android:nestedScrollingEnabled="true"
            android:scrollbarThumbVertical="@android:color/transparent"
            android:id="@+id/grid_restaurantimages"
            android:numColumns="3"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </GridView>


    </LinearLayout>
</RelativeLayout>