<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_20"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"

        >
    <ImageView
        android:id="@+id/img_back"
        android:padding="10dp"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:src="@drawable/arrow"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp">
    </ImageView>

        <fontspackageForTextView.BoldMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/signup_txt"
            android:textColor="@color/dark_blue"
            android:textSize="20dp"></fontspackageForTextView.BoldMedium>

    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            >




            <fontspackageForTextView.Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"
                ></fontspackageForTextView.Regular>

            <!--      //dlNpTUkrT3lWSXZoSVBFY052N0RNd2Q5RG9EcGpMMjRCQnFETHNVTmxKcz0=-->





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <fontpackageforEdittext.Regular
                    android:id="@+id/txt_fname"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_drawable"
                    android:hint="@string/first_name"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="30dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_dark"
                    android:textSize="14dp"></fontpackageforEdittext.Regular>


            </RelativeLayout>

            <fontspackageForTextView.Regular
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"
                ></fontspackageForTextView.Regular>

            <fontpackageforEdittext.Regular
                android:id="@+id/txt_lastname"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_drawable"
                android:hint="@string/last_name"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/black"
                android:textSize="14dp"
                ></fontpackageforEdittext.Regular>



            <fontspackageForTextView.Regular
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"
                ></fontspackageForTextView.Regular>

            <fontpackageforEdittext.Regular

                android:id="@+id/txt_email"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_drawable"
                android:hint="@string/email"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/black"
                android:textSize="14dp"
                ></fontpackageforEdittext.Regular>



            <fontspackageForTextView.Regular
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phoneNumber"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"
                ></fontspackageForTextView.Regular>

            <fontpackageforEdittext.Regular
                android:maxLength="10"
                android:id="@+id/txt_phonenumber"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_drawable"
                android:hint="@string/phone"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/black"
                android:textSize="14dp"
                ></fontpackageforEdittext.Regular>


            <fontspackageForTextView.Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/userName"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"></fontspackageForTextView.Regular>

            <fontpackageforEdittext.Regular
                android:id="@+id/txt_username"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_drawable"
                android:hint="@string/userName"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/black"
                android:textSize="14dp"
                ></fontpackageforEdittext.Regular>




            <fontspackageForTextView.Regular
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"
                ></fontspackageForTextView.Regular>

            <fontpackageforEdittext.Regular
                android:id="@+id/txt_password"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_drawable"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/black"
                android:textSize="14dp"
                ></fontpackageforEdittext.Regular>


            <fontspackageForTextView.Regular
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/passwordrule"
                android:textColor="@color/grey_dark"
                android:textSize="10dp"
                ></fontspackageForTextView.Regular>




            <fontspackageForTextView.Regular
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"
                ></fontspackageForTextView.Regular>

            <fontpackageforEdittext.Regular
                android:id="@+id/txt_conf_password"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_drawable"
                android:hint="@string/confirm"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/black"
                android:textSize="14dp"
                ></fontpackageforEdittext.Regular>



            <fontspackageForTextView.Regular
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sponsor_code"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"
                ></fontspackageForTextView.Regular>

            <fontpackageforEdittext.Regular
                android:id="@+id/txt_referral_code"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_drawable"
                android:hint="Optional"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/black"
                android:textSize="14dp"
                ></fontpackageforEdittext.Regular>


            <include layout="@layout/google_captcha_layout"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_marginLeft="3dp"
                    android:id="@+id/checkbox_tems"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"></CheckBox>

                <fontspackageForTextView.Regular
                    android:paddingLeft="5dp"
                    android:id="@+id/termsandcondtion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:text="@string/by_continuing_"
                    android:textColor="@color/black"></fontspackageForTextView.Regular>

                <fontspackageForTextView.Regular
                    android:visibility="gone"
                    android:id="@+id/privacyPolicy"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/black"></fontspackageForTextView.Regular>

            </LinearLayout>

            <fontspackageForTextView.Regular
                android:enabled="false"
                android:alpha=".7"
                android:layout_marginBottom="20dp"
                android:id="@+id/login_register"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:text="@string/register_txt"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:background="@drawable/orrange_drawable"
                ></fontspackageForTextView.Regular>




        </LinearLayout>

    </ScrollView>
</LinearLayout>

