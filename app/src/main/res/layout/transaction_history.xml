<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="1dp"
    android:id="@+id/ll_fund_list_row"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/input_arrow"
                android:rotation="300"
                android:src="@drawable/arrow"
                app:tint="@color/blue_color"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
            <fontspackageForTextView.Regular
                android:paddingStart="10dp"
                android:id="@+id/txt_currency"
                android:layout_width="wrap_content"
                android:text="@string/deposit"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/textcolor"
                ></fontspackageForTextView.Regular>

                    <fontspackageForTextView.Regular
                        android:paddingStart="5dp"
                        android:id="@+id/txt_status"
                        android:layout_width="wrap_content"
                        android:text="@string/deposit"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="10dp"
                        android:textSize="12dp"
                        android:textColor="@color/textcolor"
                        ></fontspackageForTextView.Regular>

                </LinearLayout>
                <fontspackageForTextView.Regular
                    android:alpha=".6"
                    android:paddingStart="10dp"
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:text="20 may 2021 9:30 am"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:textSize="11dp"
                    android:textColor="@color/textcolor"
                    ></fontspackageForTextView.Regular>



            </LinearLayout>
        </LinearLayout>

        <fontspackageForTextView.Regular
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="0,0000"
            android:textAllCaps="true"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_size"></fontspackageForTextView.Regular>



    </RelativeLayout>

    <fontspackageForTextView.Regular
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:text="Cancel"
        android:layout_gravity="end"
        android:id="@+id/txt_cancel"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/red_drawable"
        ></fontspackageForTextView.Regular>

    <View
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lite_background"
        ></View>


</LinearLayout>
